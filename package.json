{
  "name": "@n4l/n4l-microservice-template",
  "version": "0.4.0",
  "description": "A basic microservice template",
  "main": "app.js",
  "scripts": {
    "test": "mocha tests/unit-tests --timeout 15000 --recursive --exit",
    "test:ci": "mocha tests/unit-tests --timeout 15000 --reporter=xunit --reporter-options output=test-results/mocha/results.xml --recursive --exit",
    "test:coverage": "nyc --reporter=clover --reporter=text --report-dir=. npm run test:ci",
    "test:integration": "mocha tests/integration-tests --timeout 15000 --recursive --exit",
    "test:integrationci": "mocha tests/integration-tests --timeout 15000 --reporter=xunit --reporter-options output=test-results/mocha/results.xml --recursive --exit",
    "start": "node app.js",
    "start:watch": "nodemon app.js",
    "lint:fix": "npx eslint \"**/*.js\" --fix --ignore-pattern node_modules/",
    "lint:check": "npx eslint \"**/*.js\" --ignore-pattern node_modules/"
  },
  "author": "N4L",
  "dependencies": {
    "@n4l/microservice-builder": "^1.1.0",
    "@n4l/container-utils": "^0.8.0",
    "@n4l/fs-utils": "^0.11.0",
    "@n4l/string-utils": "^1.6.2",
    "amqplib": "^0.7.1",
    "convict": "^6.2.3",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "elastic-apm-node": "^3.27.0",
    "express": "^4.18.1",
    "express-jwt": "^6.1.2",
    "express-winston": "^4.2.0",
    "moment": "^2.29.4",
    "mongoose": "^5.13.15",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@n4l/express-app-mock": "^0.4.1",
    "@n4l/sinon-mongoose": "^0.2.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.3.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "sinon-express-mock": "^2.2.0",
    "supertest": "^6.2.4",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0"
  }
}
